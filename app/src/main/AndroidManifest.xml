<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.riteh.sl.smartfridge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartFridge">
        <activity android:name=".RegisterActivity" android:theme="@style/Theme.SmartFridge.NoActionBar"></activity>
        <activity android:name=".StoresActivity" />
        <activity android:name=".RecipesActivity" />
        <activity android:name=".GroceryActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.SmartFridge.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>