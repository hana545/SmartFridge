<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C6A5F3EB"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/gradient_blue_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Reset password"
        android:textSize="20sp"
        android:id="@+id/dialog_reset_password_title"
        android:ems="10"
        android:padding="6dp"
        android:gravity="start|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_reset_password_title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:text="Insert email: "
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/dialog_reset_password_account"
        android:ems="10"
        android:gravity="start|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/dialog_reset_password_account"
        android:text=""
        android:textSize="18sp"
        android:id="@+id/dialog_reset_password_email"
        android:ems="10"
        android:gravity="start|top" />

    <Button

        android:id="@+id/dialog_reset_password"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_reset_password_email"
        android:visibility="visible"
        android:text="Reset"
        android:textColor="@color/dark_tirkiz"
        android:textStyle="italic"
        android:textAllCaps="false" />




</RelativeLayout>