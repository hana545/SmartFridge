<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C6A5F3EB"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/gradient_blue_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="Change your name"
        android:fontFamily="@font/architectsdaughter_regular"
        android:textSize="20sp"
        android:id="@+id/dialog_change_name_title"
        android:ems="10"
        android:padding="6dp"
        android:gravity="start|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_change_name_title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="For account: "
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/dialog_change_name_account_title"
        android:ems="10"
        android:gravity="start|top" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_change_name_account_title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/dialog_change_name_account"
        android:ems="10"
        android:gravity="start|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/dialog_change_name_account"
        android:text=""
        android:maxLength="25"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
        android:textSize="18sp"
        android:id="@+id/dialog_change_name"
        android:ems="10"
        android:gravity="start|top" />

    <Button

        android:id="@+id/dialog_change_name_save"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_change_name"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:drawableTop="@android:drawable/ic_menu_save"
        tools:ignore="VectorDrawableCompat"
        android:drawableTint="@color/white"
        android:textStyle="italic"
        android:textAllCaps="false" />




</RelativeLayout>