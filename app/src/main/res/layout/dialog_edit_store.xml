<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C6A5F3EB"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/gradient_blue_white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="22sp"
        android:hint="Edit store"
        android:ems="10"
        android:gravity="start|top"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/dialog_edit_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Store name"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Delete"
        android:id="@+id/store_delete"
        android:layout_below="@id/dialog_edit_store_name"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#ff8080"/>


</RelativeLayout>