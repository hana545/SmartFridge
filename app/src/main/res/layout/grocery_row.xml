<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grocery_row_border"
    >

    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="50dp"
        android:id="@+id/recycler_grocery_name"
        android:textSize="24sp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="50dp"
        android:id="@+id/recycler_grocery_quantity"
        android:layout_below="@id/recycler_grocery_name"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="50dp"
        android:id="@+id/recycler_grocery_unit"
        android:layout_below="@id/recycler_grocery_name"
        android:layout_toRightOf="@id/recycler_grocery_quantity"
        android:layout_marginLeft="10dp"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="50dp"
        android:id="@+id/recycler_grocery_exp_date"
        android:layout_below="@id/recycler_grocery_name"
        android:layout_toRightOf="@id/recycler_grocery_unit"
        android:layout_marginLeft="50dp"
        android:textSize="16sp">
    </TextView>

</RelativeLayout>